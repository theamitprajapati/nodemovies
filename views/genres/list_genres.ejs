<%- include ../header %>

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">


    <h2>&nbsp;</h2>
    <h2>Genre Reports</h2>

    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>Sr.</th>
                <th>Titel</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            <% var i = 1; rows.forEach((row,index)=>{%>
            <tr>
                <td><%-i++;%></td>
                <td><%-row.title%></td>
                <td><a href="../genres/edit_genre">Edit</a> | <a href="../genres/details_genre?id=<%-row.id%>"> View </a>|<a href="../genres/delete_genre?id=<%-row.id%>"> Delete </a> </td>
            </tr>
            <%})%>

            </tbody>
        </table>
    </div>
</main>

<%- include ../footer %>